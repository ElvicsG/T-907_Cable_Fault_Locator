<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close_trigger_delay"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/bg_dialog_close" />


    <ImageView
        android:id="@+id/tv_delay_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_4"

        android:src="@drawable/bg_delay_plus_selector" />

    <ImageView
        android:id="@+id/tv_delay_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"

        android:gravity="center"
        android:src="@drawable/bg_delay_min_selector" />

</LinearLayout>